<% provide(:title, "Learner Info") %>

<div class= "form_container">

<table class="table table-hover">
	
	<tr>
		<th>Skill Name</th>
		<th>Skill Description</th>
		<th>Learner Name</th>
		<th>Notes</th>
	</tr>

	<tr>
		<% @learner.skills.each do |ls| %>
		<td><%= ls.skill_name %></td>
		<td><%= ls.skill_description %></td>
		<% end %>

		<td><%= @learner.user.email %></td>
		<td><%= @learner.notes %></td>
	</tr>
</table>

<br />
<br />
<br />
<p><%= link_to 'Back', learners_path %></p>

</div>
