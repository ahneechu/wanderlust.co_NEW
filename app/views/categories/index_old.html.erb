<% provide(:title, 'All Categories') %>

<div class="form_container">

<h1>Category Index Page</h1>


<table class="table table-hover">


<thead>
	<tr>
	<% @categories.each do |a| %>
	<th><%= a.category_name %></th>
	</tr>
</thead>

<tbody>

	<% a.skills.each do |s|%>	
		<tr>
		<td><%=s.skill_name %></td>
		<td><%= button_to 'Show', skill %></td>
        <td><%= button_to 'Edit', edit_skill_path(skills) %></td>
		<td><%= button_to "delete", { action: "destroy", id: s.id}, {method: :delete, data:{confirm: "Are you sure?"}, :class => "myButton"} %></td>
		</tr>

		<% end %>
	<% end %>
	show_hidden is: <%= @show_hidden %>
</tbody>
</table>

<%= link_to 'New Item', new_skill_path %><br>
<%= link_to 'Show Hidden', skills_path(show_hidden: "true") %>


</div>
