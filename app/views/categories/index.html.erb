<% provide(:title, 'All Categories') %>

<div class="form_container">

<h1>Categories and Skills</h1>

	
<table class="table table-hover">

<tr>
	<th colspan="2">Category</th>
	<th>Skills</th>
	<th>Show</th>
	<th>Edit</th>
	<th>Remove</th>
</tr>


<% @categories.each do |c| %>
<tr>
	<td colspan="2"><%= c.category_name %></td><br />
		<td></td><td></td><td></td><td></td></tr>
	<% c.skills.each do |s|%>
	<tr>
		<td></td><td></td>	
		<td><%=s.skill_name %></td>
		<td><%= link_to 'Show', s %></td>
        <td><%= link_to 'Edit', {controller: "skills", action:"update", id:s.id}, {method: :update} %></td>
        <td><%= link_to 'Delete', {controller: "skills", action:"destroy", id:s.id}, 
        {method: :delete} %></td>
        <td><%# link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>


		<!-- i still need to link edit btn with edit html -->
		<td><%# button_to "Edit", { action: "edit", id: s.id}, {method: :edit, :class => "myBtn"} %></td>
		<td><%# button_to "delete", { action: "destroy", id: s.id}, {method: :delete, data:{confirm: "Are you sure?"}, :class => "myBtn"} %></td>
</tr>

	<% end %>
<% end %>

</table>
</div>