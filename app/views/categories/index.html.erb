<% provide(:title, 'All Categories') %>

<div class="form_container">

<h1>Categories and Skills</h1>

	
<table class="table table-hover">

<tr>
	<th>Category</th>
	<th>Skills</th>
	<th>Remove</th>
</tr>


<% @categories.each do |c| %>
<tr>
	<td><%= c.category_name %></td><br />

	<% c.skills.each do |s|%>	
		<td></td>
		<td><%=s.skill_name %></td>
		<td><%= button_to "delete", { action: "destroy", id: s.id}, {method: :delete, data:{confirm: "Are you sure?"}, :class => "myButton"} %></td>
</tr>

	<% end %>
<% end %>

</table>
</div>