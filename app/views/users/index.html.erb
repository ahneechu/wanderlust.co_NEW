<% provide(:title, 'All users') %>

<div class="form_container">
<h1>All users</h1>

<table class="table table-hover">
	<tr>
		<th>Users</th>
		<th>Show</th>
		<th>Edit</th>
		<th>Remove</th>
	</tr>

	<% @users.each do |u| %>
	<tr>
		<td><%= u.email %></td>
		<td><%= link_to "Show", u %></td>
		<td><%= link_to "Edit", { action: "edit", id: u.id}, 
		{method: :get} %></td>
		<td><%= link_to "Delete", { action: "destroy", id: u.id}, 
		{method: :delete, data:{confirm: "Are you sure?"}} %></td>
	</tr>
	<% end %>

</table>
  
</div>

