
<!-- <div class="signup_container"> -->
	<div class=".col-xs-12 .col-sm-6 .col-md-8">
		<div class ="row">
		  <div class="errors">
		    <%= form_for User.new, html: {role: "form"} do |f| %>
		    	<% if User.new.errors.any? %>
		          <div id="error_explanation">
		            <h2><%= pluralize(User.new.errors.count, "error") %> prohibited this product from being saved:</h2>
		            <ul>
		            <% User.new.errors.full_messages.each do |msg| %>
		              <li><%= msg %></li>
		            <% end %>
		            </ul>
		          </div>
		        <% end %>

		      <div class="actions">
		          <div class="form-group">
				      <%# f.label :name %>
					  <%= f.text_field :name, placeholder: 'User Name', class: 'form-control' %>
					  <%= User.new.errors[:name].join(", ") %>
				  </div>

				  <div class="form-group">
				  <%# f.label :email %>
				  <%= f.text_field :email, placeholder: 'Email', class: 'form-control' %>
				  <%= User.new.errors[:email].join(", ") %>
				  </div>

				  <div class="form-group">
				  <%# f.label :password %>
				  <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
				  <%= User.new.errors[:password].join(", ") %>
				  </div>

				  <div class="form-group">
				  <%# f.label :password_confirmation, "Confirm Password" %>
				  <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-control' %>
				  <%= User.new.errors[:password_confirmation].join(", ") %>
				  </div>
				  
				  <div>
			      <%= f.submit "Create My Account", id: 'signup_btn', class: 'btn btn-default btn-lg' %>
			      </div>
			    <% end %>
		  	  </div>
		  </div>
		</div>
	</div>
