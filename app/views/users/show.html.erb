<% provide(:title, @user.name) %>

<div class="form_container row">

	<% if current_user %>
	<h1> Welcome <%= @user.email %></h1>
	<%= link_to 'edit profile', edit_user_path %>

	<div class="profile_container right">
	<table class="table table-hover">
		<tr>
			<th>Skills</th>
			<!-- <th>Show</th> -->
			<th>Edit</th>
			<th>Remove</th>
		</tr>

		<h3>Skills I'm Teaching</h3>
		<tbody>
		<% @user.mentors.each do |m| %>
			<% m.skills.each do |s| %>
		<tr>
			<td><%= link_to s.skill_name, m %> </td>
			<!-- <td><%# link_to 'Show', m %></td> -->
			<td><%= link_to "Edit", { controller: "skills", action: "edit", id: s.id}, {method: :get} %></td>
			<td><%= link_to "delete", { controller: "skills", action: "destroy", id: s.id}, 
			{method: :delete, data:{confirm: "Are you sure?"}} %></td>
		</tr>
		<% end %>
		<% end %>
		</tbody>
	</table>
	</div>


	<div class="profile_container left">
	<table class="table table-hover">
		<tr>
			<th>Skills</th>
			<!-- <th>Show</th> -->
			<th>Edit</th>
			<th>Remove</th>
		</tr>
		<h3>Skills I'm Learning</h3>
		<tbody>
		<% @user.learners.each do |l| %>
			<% l.skills.each do |s| %>
		<tr>
			<td><%= link_to s.skill_name, l %> </td>
			<!-- <td><%# link_to 'Show', l %></td> -->
			<td><%= link_to "Edit", { controller: "skills", action: "edit", id: s.id}, {method: :get} %></td>
			<td><%= link_to "delete", { controller: "skills", action: "destroy", id: s.id}, 
			{method: :delete, data:{confirm: "Are you sure?"}} %></td>
		</tr>
		<% end %>
		<% end %>
		</tbody>
	</table>
	</div>

	<% end %>
</div>