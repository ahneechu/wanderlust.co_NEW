<% provide(:title, @skill.skill_name) %>

<div class = "form_container">

<table class="table table-hover">

	<tr>
		<th>Skill Name</th>
		<th>Skill Description</th>
		<th>Mentors Name</th>
		<th>Learners Name</th>
	</tr>
	<tr>
		<td><%= @skill.skill_name %></td>
		<td><%= @skill.skill_description %></td>

	<% @skill.mentors.each do |sm| %>
		<td><%= sm.user.email %>
		<% end %></td>

	<% @skill.learners.each do |lm| %>
		<td><%= lm.user.email %>
		<% end %></td>
	</tr>

</table>	


<br />
<br />
<br />

<p><%= link_to 'Back', skills_path %></p>

</div>