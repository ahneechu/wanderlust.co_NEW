<% provide(:title, 'All Mentors') %>

<div class="form_container">

<h1>Mentors and Skills</h1>

	
<table class="table table-hover">

<tr>
	<th colspan="2">MENTORS</th>
	<th>SKILL NAME</th>
	<th>SKILL DESCRIPTION</th>
